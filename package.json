{
  "name": "shadcn-lit-registry",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build && bun run storybook:build",
    "start": "next start",
    "lint": "biome check",
    "type-check": "tsc --noEmit",
    "format": "npx prettier --write 'registry/**/*.ts' && biome format --write",
    "format:check": "biome format",
    "test": "vitest run",
    "test:unit": "vitest run --project=unit",
    "test:storybook": "vitest run --project=storybook",
    "release": "semantic-release",
    "registry:build": "shadcn build",
    "storybook": "storybook dev --no-open -p 6006",
    "storybook:build": "storybook build -o public/storybook"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.548.0",
    "lucide-static": "^0.548.0",
    "next": "16.0.1",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "shadcn": "^3.5.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@storybook/addon-a11y": "^10.0.0",
    "@storybook/addon-docs": "^10.0.0",
    "@storybook/addon-vitest": "^10.0.0",
    "@storybook/web-components-vite": "^10.0.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^24.9.2",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitest/browser": "^4.0.4",
    "@vitest/browser-playwright": "^4.0.4",
    "@vitest/coverage-v8": "^4.0.4",
    "eslint-plugin-storybook": "^10.0.0",
    "lit": "^3.3.1",
    "playwright": "^1.56.1",
    "semantic-release": "^25.0.1",
    "storybook": "^10.0.0",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.4"
  },
  "overrides": {
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2"
  }
}
