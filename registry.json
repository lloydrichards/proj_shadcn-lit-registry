      "files": [
        {
          "path": "registry/lib/tailwindMixin.ts",
          "type": "registry:lib"
        },
        {
          "path": "registry/lib/tailwindMixin.d.ts",
          "type": "registry:lib"
        },
        {
          "path": "registry/styles/tailwind.global.css",
          "type": "registry:style"
        }
      ]
    }
  ]
